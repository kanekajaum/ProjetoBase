@model ProjetoBase.MVC.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Excluir Produto";
}

<h2>Tem certeza que deseja excluir este produto?</h2>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Preço</dt>
        <dd class="col-sm-10">R$ @Model.Preco.ToString("F2")</dd>
    </dl>

    <form asp-action="Deletar">
        <input type="hidden" asp-for="Id" />
        <br />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>